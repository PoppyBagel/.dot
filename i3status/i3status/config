# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ

general {
    colors = true
    interval = 5
}

order += "tztime local"
order += "battery_level"
order += "volume_status"
order += "keyboard_layout"

tztime local {
    format = "%H:%M %d-%m-%Y, %a"
    on_click 1 = "exec gsimplecal"
}

battery_level {
    battery_id = "all"
    format = "BAT {percent}%"
    hide_seconds = True
    measurement_mode = "acpi"
}

volume_status {
    cache_timeout = 1
    button_up = 4
    button_down = 5
    button_mute = 2
}

keyboard_layout {
    cache_timeout = 1
    color_ru = "#FFFFFF"
    color_us = "#FFFFFF"
}

